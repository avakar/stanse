<?xml version="1.0" encoding="UTF-8"?>
<!--
Draft XML popisu automatu
-->
<automaton>
  <name>Jmeno automatu</name>
  <description>Popisek automatu</description>
  <triggerClass>cz.muni.fi.iti.scv.newchecker.functionNameTrigger</triggerClass>
  <state initial="true">
	<name>U</name> <!-- V ramci automatu unikatni -->
	<description>Unlocked</description>
	<transition> <!-- Kazdy state ma alespon jeden transition. Finalni stavy totiz za stavy nepovazujeme (neevidujeme je) -->
		<trigger>lock</trigger><!-- Akce, pod kterou se prejde do <to> stavu-->
		<to>L</to><!-- Name stavu, do ktereho se prejde -->
	</transition>

	<transition>
		<trigger>unlock</trigger>
		<errmsg>Double unlock!!</errmsg><!-- Misto "to" muze byt errmsg. To znamena, ze se dostavame do chyboveho stavu. Automat konci -->
	</transition>

  </state>
  <state>
	<name>L</name>
	<param></param><!-- Parametr mozna bude pro cely automat, ne jenom pro stav -->
	<description>Locked</description>
	<eor>
		<errmsg>End with locked!!</errmsg> <!-- Zde se nesmi skoncit (eor + errmsg)
			eor se pouziva vzdy jen s errmsg, jinak se nechava transition prazdy.
			Otazkou je, jestli je potreba eor vubec psat. Stejny vyznam by mela transition bez trigger pouze s errmsg 
			-->
	</eor>
	<transition>
		<trigger>unlock</trigger>
		<to>U</to>
	</transition>
	<transition>
		<trigger>lock</trigger>
		<errmsg>Double lock!!!</errmsg>

	</transition>
  </state>


</automaton>
